<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/darkGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LynnGroceryStore" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/darkGreen</item>
        <item name="colorAccent">@color/darkGreen</item>
        <item name="android:textColorHint">@color/colorDarkGrey</item>
        <item name="colorControlNormal">@color/colorDarkGrey</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>

    </style>

    <style name="LynnGroceryStore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LynnGroceryStore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LynnGroceryStore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="DarkEditText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorHint">@color/average_grey</item>
        <item name="android:textColor">@color/average_grey</item>
        <item name="colorControlNormal">@color/average_grey</item>
    </style>


</resources>
