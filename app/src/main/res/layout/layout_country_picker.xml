<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_country_holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layout_flag_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:id="@+id/iv_country_flag"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/flag_india" />
        </LinearLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_selected_country"
            style="@style/DarkEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/layout_flag_holder"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:minWidth="40dp"
            android:textSize="16sp"
            tools:text="(IN) +91"
            android:layout_toRightOf="@+id/layout_flag_holder" />
    </RelativeLayout>

</RelativeLayout>